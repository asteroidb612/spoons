<div class="container row tab centered" style="text-align: center;">
    <h2>Stats for Round 2 - Wednesday</h2>
</div>
<div class="container tab row centered" style="text-align: center;">
  <h3>Tag Feed - Past 12 Hours</h3>
  <% Game.find(4).tags_after(Time.now - 12.hours).each do |t| %>
  <div class="small-4 large-6 columns centered"><%= t.to_s %></div>
  <% end %>
</div>
<div class="container tab row centered" style="text-align: center;">
  <h3>Active Players</h3>
  <% Game.find(4).players.where(tagged: false).each do |p| %>
  <div class="small-2 large-3 columns centered"><%= p.name %></div>
  <% end %>
</div>
<div class="container row tab centered" style="text-align: center;">
  <h3>Inactive (Tagged) Players</h3>
  
  <% Game.find(4).players.where(tagged: true).each do |p| %>
  <div class="small-2 large-3 columns centered"><%= p.name %></div>
  <% end %>
  <br />
</div>
<div class="container row tab centered" style="text-align: center;">
  <h3>Awards</h3>
  <div class="large-6 small-3 columns centered">Most Tags: <%= "#{Game.find(4).most_tags}" %><br /></div>
