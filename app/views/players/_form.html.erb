      <%= f.label :password %><br />
      <%= f.text_field :password %>
    </div>

    <div class="field row">
      <%= f.label :year %><br />
      <%= f.number_field :year %>
    </div>

    <div class="field row show-for-touch">
      <%= f.label :photo %><br />
      <%= f.file_field :photo %>
    </div>
    
    <div class="actions">
      <%= link_to_submit("Create Player", {:class => "button"}) %>
    </div>
  </div>  
<% end %>
